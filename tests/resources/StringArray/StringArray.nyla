module StringArray {

	static int main() {
		char[] myString = "Hello World!";
		
		int sum = 0;
		for int i = myString.length - 1; i >= 0; --i {
			sum += myString[i];
		}

		char* myStringAsPtr = "Hello World!";
		for int i = 0; i < myString.length; ++i {
			sum += myStringAsPtr[i];
		}

		char* castToMe = myString;
		for int i = 0; i < myString.length; ++i {
			sum += myStringAsPtr[i];
		}

		return sum;
	}

}